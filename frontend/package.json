{
  "name": "frontend",
  "private": true,
  "version": "1.6.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode development",
    "build:prod": "echo '❌ PRODUCTION BUILD DISABLED - Requires fixing all useCallback issues first' && echo 'See: frontend/PRODUCTION_BUILD_BLOCKED.md' && exit 1",
    "build:prod:force": "echo '⚠️  WARNING: Production build will fail due to temporal dead zone errors' && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:smoke": "playwright test --grep smoke",
    "test:status": "playwright test --grep order-status-workflow",
    "test:business": "playwright test --grep business-logic",
    "test:customers": "playwright test --grep customers",
    "test:orders": "playwright test --grep orders",
    "test:workflow": "playwright test --grep workflow",
    "test:scheduling": "playwright test --grep scheduling",
    "test:headed": "playwright test --headed",
    "test:report": "playwright show-report"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router": "^7.10.1",
    "react-router-dom": "^7.10.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "vite": "^7.2.4"
  }
}
